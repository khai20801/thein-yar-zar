<%- include('partials/header.ejs') %>
<main class="app-content">
    <div class="app-title">
        <div>
            <h1> <i class="icofont-list"></i> Product Lists </h1>
        </div>
        <ul class="app-breadcrumb breadcrumb side">
            <a href="../../admin/addproduct" class="btn btn-outline-primary">
                <i class="icofont-plus"></i>
            </a>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered" id="sampleTable">
                            <thead>
                                <tr>
                                    <th> No </th>
                                    <th> Name </th>
                                    <th> Price </th>
                                    <th> Category </th>
                                    <th> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% var i = 1; %>
                                <% data.forEach(function(product){ %>
                                <tr>
                                    <td>
                                        <%= i++ %>.
                                    </td>
                                    <td>
                                        <div class="d-flex no-block align-items-center">
                                            <div class="mr-3">
                                                <img src="<%= product.image %>" alt="user" class="rounded-circle"
                                                    width="50" height="45" />
                                            </div>
                                            <div class="">
                                                <h5 class="text-dark mb-0 font-16 font-weight-medium">
                                                    <%= product.name %>
                                                </h5>
                                                <span class="text-muted font-14">
                                                    <%= product.description %>
                                                </span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <%= product.price %> Ks
                                    </td>
                                    <td>
                                        <%= product.category %>
                                    </td>
                                    <td>
                                        <!-- delete product button -->
                                        <form class="d-inline-block"
                                            onsubmit="return confirm('Are you sure want to delete?')" method="POST"
                                            action="deleteProduct">

                                            <input type="hidden" name="doc_id" value="<%= product.doc_id %>">

                                            <button class="btn btn-danger">
                                                <i class="icofont-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<%- include('partials/footer.ejs') %>