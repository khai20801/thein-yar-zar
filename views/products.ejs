<%- include('partials/header.ejs') %>
<main class="app-content">
  <div class="app-title">
        <div>
            <h1> <i class="icofont-list"></i> Product Lists </h1>
        </div>
        <ul class="app-breadcrumb breadcrumb side">
            <a href="../../admin/addproduct" class="btn btn-outline-primary">
                <i class="icofont-plus"></i>
            </a>
        </ul>
  </div>
  <div class="row">
      <div class="col-md-12">
          <div class="tile">
              <div class="tile-body">
                  <div class="table-responsive">
                      <table class="table table-hover table-bordered" id="sampleTable">
                          <thead>
                              <tr>
                                  <th> No </th>
                                  <th> Name </th>
                                  <th> Price </th>
                                  <!-- <th> Description </th> -->
                                  <th> Category </th>
                                  <th> Action </th>
                              </tr>
                          </thead>
                          <tbody>
                            <% var i = 1; %>
                            <% data.forEach(function(product){ %>
                              <tr>
                                  <td>
                                     <%= i++ %>
                                  </td>
                                  <td>
                                      <div class="d-flex no-block align-items-center">
                                          <div class="mr-3">
                                              <img src="<%= product.image %>" alt="user" class="rounded-circle" width="50" height="45" />
                                          </div>
                                          <div class="">
                                              <h5 class="text-dark mb-0 font-16 font-weight-medium">
                                                 <%= product.name %>
                                              </h5>
                                          </div>
                                      </div>
                                  </td>
                                  <td>
                                    <%= product.price %> Ks
                                  </td>
                                  <!-- <td>
                                     <%= product.description %>
                                  </td> -->
                                  <td>
                                    <%= product.category %>
                                  </td>
                                  <td>
                                      <a href="#" class="btn btn-warning">
                                          <i class="icofont-ui-settings"></i>
                                      </a>
                                      <form class="d-inline-block" onsubmit="return confirm('Are you sure want to delete?')" method="POST" action="">
                                          <input type="hidden" name="id" value="">
                                          <button class="btn btn-outline-danger">
                                              <i class="icofont-close"></i>
                                          </button>
                                      </form>
                                  </td>
                              </tr>
                              <% }); %>
                          </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
  </div>  
</main>  
<%- include('partials/footer.ejs') %>    